<!-- Brand Logo -->
<a href="index3.html" class="brand-link">
    <img src="~/Admin-Layout/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
         style="opacity: .8">
    <span class="brand-text font-weight-light">پنل مدیریت</span>
</a>
@inject UserManager<AspNetUser> userManager;
<!-- Sidebar -->
<div class="sidebar" style="direction: ltr">
    <div style="direction: rtl">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            @{
                if (User.Identity.IsAuthenticated)
                {
                    var usr = await userManager.FindByNameAsync(User.Identity.Name);

                    <div class="image">
                        <img src="https://www.gravatar.com/avatar/52f0fbcbedee04a121cba8dad1174462?s=200&d=mm&r=g"
                         class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">@($"{usr.Name} {usr.LastName}")</a>
                    </div>
                }
                else
                {
                    <div class="image">
                        <img src="https://www.gravatar.com/avatar/52f0fbcbedee04a121cba8dad1174462?s=200&d=mm&r=g"
                         class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">کاربر مهمان</a>
                    </div>
                }
            }

        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                 with font-awesome or any other icon font library -->

                <li class="nav-item">
                    <a asp-area="admin" asp-controller="home" asp-action="index" class="nav-link active">
                        <i class="fa fa-circle-o nav-icon"></i>
                        <p>داشبورد </p>
                    </a>
                </li>
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fa fa-pie-chart"></i>
                        <p>
                            موسیقی
                            <i class="right fa fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">

                        <li class="nav-item">
                            <a asp-area="admin" asp-controller="Music" asp-action="Musics" class="nav-link">
                                <i class="fa fa-calendar-o nav-icon"></i>
                                <p>موزیک ها</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="admin" asp-controller="Music" asp-action="Genres" class="nav-link">
                                <i class="fa fa-circle-o nav-icon"></i>
                                <p>سبک ها</p>
                            </a>
                        </li>

                    </ul>
                </li>
                <li class="nav-item has-treeview">
                    <a href="#" class="nav-link">
                        <i class="nav-icon fa fa-tree"></i>
                        <p>
                            هنرمندان
                            <i class="fa fa-angle-left right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-area="admin" asp-controller="Artist" asp-action="Artists" class="nav-link">
                                <i class="fa fa-microphone nav-icon"></i>
                                <p>همه هنرمندان </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="admin" asp-controller="Artist" asp-action="Singers" class="nav-link">
                                <i class="fa fa-microphone nav-icon"></i>
                                <p>خواننده ها</p>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
</div>
<!-- /.sidebar -->