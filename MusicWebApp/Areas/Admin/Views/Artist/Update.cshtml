@{
    TempData["Title"] = "افزودن هنرمند";
}
@using MusicWebApp.Areas.Admin.ViewModels.Artist;
@model UpdateArtistViewModel;
@{
    var data = ViewData["Data"] as Artist;
}
<div>
    <div class="card card-light">
        <div class="card-header">
            <h3 class="card-title">@TempData["Title"]</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-area="admin" asp-controller="Artist" asp-action="Update">
            <input hidden asp-for="Id" />
            <div class="card-body">
                <div class="form-group">
                    <label for="inputName" class="col-sm-4 control-label">نام</label>
                    <div class="col-sm-7">
                        <input asp-for="Name" class="form-control" id="inputName" placeholder="نام را وارد کنید"
                               value="@data.Name">
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputLastname" class="col-sm-4 control-label">نام خانوادگی</label>
                    <div class="col-sm-7">
                        <input type="text" asp-for="LastName" class="form-control" id="InputLastName"
                               placeholder="نام خانوادگی را وارد کنید" value="@data.LastName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">بیو گرافی</label>
                    <div class="col-sm-7">
                        <textarea id="bio" class="form-control" asp-for="Bio" rows="3"
                                  placeholder="وارد کردن اطلاعات ..."></textarea>
                        <input hidden type="text" id="bioinput" value="@data.Bio" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="InputLastname" class="col-sm-4 control-label">وب سایت</label>
                    <div class="col-sm-7">
                        <input type="text" asp-for="WebSite" class="form-control" id="InputLastName"
                               placeholder="وب سایت را وارد کنید" value="@data.WebSite">
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        @{
                            if (data.Singer != null)
                            {
                                <input checked class="form-check-input" asp-for="IsSinger" type="checkbox">
                            }
                            else
                            {
                                <input class="form-check-input" asp-for="IsSinger" type="checkbox">

                            }
                        }
                        <label class="form-check-label">خواننده</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        @{
                            if (data.SongWriter != null)
                            {

                                <input checked class="form-check-input" asp-for="IsSongWriter" type="checkbox">
                            }
                            else
                            {
                                <input class="form-check-input" asp-for="IsSongWriter" type="checkbox">

                            }
                        }
                        <label class="form-check-label">شاعر</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        @{
                            if (data.Compos != null)
                            {
                                <input checked class="form-check-input" asp-for="IsComposer" type="checkbox" />
                            }
                            else
                            {
                                <input class="form-check-input" asp-for="IsComposer" type="checkbox" />
                            }
                        }
                        <label class="form-check-label">آهنگ ساز</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        @{
                            if (data.Arrangement != null)
                            {
                                <input checked class="form-check-input" asp-for="IsArrengement" type="checkbox" />
                            }
                            else
                            {
                                <input  class="form-check-input" asp-for="IsArrengement" type="checkbox" />
                            }
                        }
                        <label class="form-check-label">تنظیم کننده</label>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
            <div class="card-footer">
                <button type="submit" class="btn btn-info">آپدیت</button>
                <button type="submit" class="btn btn-default float-left">لغو</button>
            </div>
            <!-- /.card-footer -->
        </form>
    </div>
</div>
<script src="~/MusicJs/Artist/UpdateArtist.js"></script>