@inject UserManager<AspNetUser> userManager
<div class="master-container-fluid header-inner">
    <div class="row">


        <div class="col-auto col-md-5 col-xl-5 d-flex align-items-center">
            <div class="d-block d-lg-none">
                <a href="#" class="navbar-toggler toggle-off-canvas-main-menu" data-target="#primary-menu-offcanvas">
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </a>
            </div>
            <nav class="navbar navbar-expand-lg d-none d-md-block">
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="menu-item"> 
                            <a class="nav-link">خانه</a>
                        </li>
                        <li class="menu-item"> <a class="nav-link">وبلاگ</a>
                        </li>
                        <li class="menu-item"> <a class="nav-link">درباره ما</a>
                        </li>
                        
                    </ul>
                </div>
            </nav>
        </div>

        <div class="col-auto col-md-2 col-xl-2 d-flex align-items-center justify-content-center p-0">
            <div class="brand">
                <a class="brand d-flex align-items-center" href="home.html"> <span
                        class="adonis-icon ml-md-2 color-dark ml-1 icon-5x"><svg version="1.1"
                            xmlns="http://www.w3.org/2000/svg" viewBox="0 0 27 32">
                            <defs>
                                <linearGradient id="Gradient" x1="0" y1="0" x2="100%" y2="0">
                                    <stop offset="0%" stop-color="#b08cf9"></stop>
                                    <stop offset="100%" stop-color="#91a5f4"></stop>
                                </linearGradient>
                            </defs>
                            <path fill="url(#Gradient)"
                                d="M2.594 0.275c-0.257-0.166-0.571-0.265-0.908-0.265-0.932 0-1.688 0.756-1.688 1.688 0 0.028 0.001 0.055 0.002 0.082l-0-0.004v13.246l16.702-6.219zM26.030 14.49l-4.184-2.541-21.846 8.102v10.154c-0.001 0.024-0.002 0.051-0.002 0.079 0 0.927 0.752 1.679 1.679 1.679 0.319 0 0.617-0.089 0.871-0.243l-0.007 0.004c1.501-0.888 22.21-13.433 23.489-14.214 0.52-0.316 0.863-0.88 0.863-1.524s-0.342-1.207-0.855-1.519l-0.008-0.004z">
                            </path>
                        </svg></span>
                    <strong class="p-1 fs-6 fs-lg-8">آریا موزیک</strong>
                </a>
            </div>
        </div>
        <div
            class="col-auto col-xl-5 d-flex justify-content-end justify-content-lg-end align-items-center navbar-secondary mr-auto">
           
            @* Profile *@
            <div class="nav-item position-relative">
                <a class="nav-link dropdown-toggle w-nowrap pl-0" href="#" id="dropdownUserSettings"
                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="flex-row d-inline-flex">
                        <div class="user">
                            <img class="rounded-circle" src="~/assets/images/user-thumb-1.jpg" alt="">
                        </div>
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                var r = await userManager.FindByNameAsync(User.Identity.Name);
                                <span class="mr-2 mt-2 fs-1 d-none d-lg-block">@($"{r.Name} {r.LastName}")</span>
                            }
                            else
                            {
                                <span class="mr-2 mt-2 fs-1 d-none d-lg-block">@($"کاربر مهمان")</span>

                            }
                        }
                    </div>
                </a>
                <div class="dropdown-menu dropdown-menu-right user-settings-dropdown clearfix"
                    aria-labelledby="dropdownUserSettings">
                    <div class="settings-top">
                        <div class="user-cover-image">
                            <img src="../assets/images/user/cover.jpg" alt="">
                        </div>
                        <div class="user-profile-image rounded-circle">
                            <img src="../assets/images/browse/browse-overview-6.jpg" alt="">
                        </div>
                    </div>
                    <div class="settings-bottom">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                var r = await userManager.FindByNameAsync(User.Identity.Name);
                                <h5 class="user-name text-center">@($"{r.Name} {r.LastName}")</h5>

                            }
                            else
                            {
                                <h5 class="user-name text-center">@($"کاربر مهمان")</h5>
                            }
                        }
                        <ul class="user-settings-menu list-unstyled">
                            @{
                                if (User.Identity.IsAuthenticated)
                                {
                                    <li><a onclick='window.location.replace("/Panel");' class="inactive-color"><span
                                            class="adonis-icon notification ml-3 icon-3x"><svg version="1.1"
                                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
                                                    <path
                                                    d="M10 6c0-3.314 2.686-6 6-6s6 2.686 6 6c0 3.314-2.686 6-6 6s-6-2.686-6-6zM24.002 14h-1.107l-6.222 12.633 2.327-11.633-3-3-3 3 2.327 11.633-6.222-12.633h-1.107c-3.998 0-3.998 2.687-3.998 6v10h24v-10c0-3.313 0-6-3.998-6z">
                                                    </path>
                                                </svg></span>پروفایل شما</a>
                                    </li>
                                    <li><a href="#" class="inactive-color"><span class="adonis-icon ml-3 icon-3x"><svg
                                                version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
                                                    <path d="M30 19l-9 9-3-3-2 2 5 5 11-11z"></path>
                                                    <path
                                                    d="M14 24h10v-3.598c-2.101-1.225-4.885-2.066-8-2.321v-1.649c2.203-1.242 4-4.337 4-7.432 0-4.971 0-9-6-9s-6 4.029-6 9c0 3.096 1.797 6.191 4 7.432v1.649c-6.784 0.555-12 3.888-12 7.918h14v-2z">
                                                    </path>
                                                </svg></span>دنبال شوندگان</a>
                                    </li>
                                    <li><a href="#" class="inactive-color"><span class="adonis-icon ml-3 icon-2x"><svg
                                                version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32">
                                                    <path
                                                    d="M0 0h8v8h-8zM12 2h20v4h-20zM0 12h8v8h-8zM12 14h20v4h-20zM0 24h8v8h-8zM12 26h20v4h-20z">
                                                    </path>
                                                </svg></span> لیست مورد علاقه</a>
                                    </li>
                                    <li><a href="#" class="inactive-color"><span class="adonis-icon ml-3 icon-4x"><svg
                                                fill="#000000" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                                    <path
                                                    d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z">
                                                    </path>
                                                    <path d="M0 0h24v24H0z" fill="none"></path>
                                                </svg></span>خریداری شده ها</a>
                                    </li>
                                    <li><a asp-controller="Account" asp-action="Logout" class="inactive-color"><span
                                            class="adonis-icon ml-3 icon-2x"><svg version="1.1"
                                                xmlns="http://www.w3.org/2000/svg" height="32" viewBox="0 0 32 32">
                                                    <path
                                                    d="M24 20v-4h-10v-4h10v-4l6 6zM22 18v8h-10v6l-12-6v-26h22v10h-2v-8h-16l8 4v18h8v-6z">
                                                    </path>
                                                </svg></span>خروج</a>
                                    </li>
                                }
                                else
                                {
                                    <li><a asp-controller="Account" asp-action="LoginRegister" class="inactive-color"><span
                                            class="adonis-icon ml-3 icon-2x"><svg version="1.1"
                                                xmlns="http://www.w3.org/2000/svg" height="32" viewBox="0 0 32 32">
                                                    <path
                                                    d="M24 20v-4h-10v-4h10v-4l6 6zM22 18v8h-10v6l-12-6v-26h22v10h-2v-8h-16l8 4v18h8v-6z">
                                                    </path>
                                                </svg></span>ورود</a>
                                    </li>
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>